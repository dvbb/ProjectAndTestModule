@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <title>登录 - MyBank</title>
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link rel="stylesheet" href="~/Css/bootstrap.min.css">
    <link rel="stylesheet" href="~/Css/Home_EmployeeLogin.css">
    <script src="~/Scripts/jquery-3.3.1.min.js"></script>

</head>
<body>



    <div class="box">
        <div class="title">
            <a href="./index" class="login_btn">用户</a>
            <b>·</b>
            <a href="./EmployeeLogin" class="regis_btn">管理员</a>
        </div>
        <div class="sign-in">

            <div class="input-group">
                <span class="input-group-addon "><span class="glyphicon glyphicon-phone"></span></span>
                <input type="text" class="form-control " placeholder="账号" id="account">
            </div>

            <div class="input-group">
                <span class="input-group-addon"><span class="glyphicon glyphicon-lock"></span></span>
                <input type="password" class="form-control" placeholder="密码" id="pwd">
            </div>

            <button class="btn-login">登录</button>
            @*<a href="javascript:;"><img src="~/img/moresign.png" alt=""></a>*@
        </div>
    </div>
    <div class="mask"></div>






    <script>
        $(function () {

            //登录按钮
            $(".btn-login").click(function () {
                var str = '/Home/AJAXEmployeeLogin?account=' + $("#account").val() + "&pwd=" + $("#pwd").val()
                $.ajax({
                    'url': str, 'type': 'post',
                    success: function (data) {
                        console.log(data.Myflag);
                        console.log(data.Myflag == "success");
                        if (data.Myflag == "success") {
                            alert("欢迎您，职工：" + data.ename)
                            window.location = "../Employee/index";
                        }
                        else {
                            alert("用户名或密码错误")
                        }
                    },
                    error: function (message) {
                        alert('error:' + message.statusText);
                    }
                });
            });



        });



    </script>



</body>
</html>